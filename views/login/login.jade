extends ../base.jade
block content
  md-content(layout="row" layout-fill)
    div(flex="20")
    div(flex)
      md-card
        md-card-content
          h1.md-title Number-O-Matic
          p Please login using one of the following Authentication Providers.
          p Credentials for this demo: demo/demo
          md-actions(layout="row" layout-sm="column" layout-align="end center")
